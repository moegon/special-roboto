{
  "name": "atlas-pipeline-vscode",
  "displayName": "Atlas Pipeline Toolkit",
  "description": "Interact with OpenAI Atlas pipelines from VS Code: ingest multimedia, catalog clips, and analyse them with open-source models.",
  "version": "0.0.1",
  "publisher": "atlas-toolkit",
  "icon": "media/atlas-icon.png",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "atlas.ingestMedia",
        "title": "Atlas: Ingest Media",
        "category": "Atlas Pipeline"
      },
      {
        "command": "atlas.refreshLibrary",
        "title": "Atlas: Refresh Media Library",
        "category": "Atlas Pipeline"
      },
      {
        "command": "atlas.openClip",
        "title": "Atlas: Open Clip",
        "category": "Atlas Pipeline"
      },
      {
        "command": "atlas.analyseClip",
        "title": "Atlas: Analyse Clip",
        "category": "Atlas Pipeline"
      },
      {
        "command": "atlas.openChat",
        "title": "Atlas: Open AI Chat",
        "category": "Atlas AI",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "atlas.selectChatProvider",
        "title": "Atlas: Select AI Chat Provider",
        "category": "Atlas AI"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "atlasToolkit",
          "title": "Atlas",
          "icon": "media/atlas-icon.svg"
        }
      ]
    },
    "views": {
      "atlasToolkit": [
        {
          "id": "atlasMediaLibrary",
          "name": "Media Library"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "atlas.openClip",
          "when": "view == atlasMediaLibrary && viewItem == atlasClip",
          "group": "navigation@1"
        },
        {
          "command": "atlas.analyseClip",
          "when": "view == atlasMediaLibrary && viewItem == atlasClip",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "atlas.openClip",
          "when": "atlasMediaLibraryFocus"
        },
        {
          "command": "atlas.analyseClip",
          "when": "atlasMediaLibraryFocus"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Atlas Pipeline Toolkit",
      "properties": {
        "atlas.apiBaseUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "Base URL for the Atlas pipeline API."
        },
        "atlas.apiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "API key used to authenticate with the Atlas pipeline service."
        },
        "atlas.modelEndpoint": {
          "type": "string",
          "default": "http://localhost:8000/inference",
          "description": "Endpoint for the hosted open-source model used to analyse clips."
        },
        "atlas.chatProvider": {
          "type": "string",
          "enum": ["lmstudio", "openrouter", "custom"],
          "default": "lmstudio",
          "description": "AI chat provider to use (LM Studio, OpenRouter, or custom API)."
        },
        "atlas.chatStreaming": {
          "type": "boolean",
          "default": true,
          "description": "Enable streaming responses for chat (recommended for better UX)."
        },
        "atlas.chatTemperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Temperature for AI responses (0 = deterministic, 2 = very creative)."
        },
        "atlas.chatMaxTokens": {
          "type": "number",
          "default": 2000,
          "description": "Maximum tokens for AI responses."
        },
        "atlas.lmStudioEndpoint": {
          "type": "string",
          "default": "http://localhost:1234/v1/chat/completions",
          "description": "LM Studio API endpoint (usually http://localhost:1234/v1/chat/completions)."
        },
        "atlas.lmStudioModel": {
          "type": "string",
          "default": "local-model",
          "description": "Model name for LM Studio (e.g., 'llama-3-8b', 'mistral-7b')."
        },
        "atlas.openRouterApiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "OpenRouter API key. Get one at [openrouter.ai](https://openrouter.ai)."
        },
        "atlas.openRouterModel": {
          "type": "string",
          "default": "anthropic/claude-3.5-sonnet",
          "description": "OpenRouter model (e.g., 'anthropic/claude-3.5-sonnet', 'openai/gpt-4')."
        },
        "atlas.customApiEndpoint": {
          "type": "string",
          "default": "",
          "description": "Custom API endpoint (OpenAI-compatible format)."
        },
        "atlas.customApiKey": {
          "type": "string",
          "default": "",
          "description": "API key for custom endpoint (if required)."
        },
        "atlas.customApiModel": {
          "type": "string",
          "default": "",
          "description": "Model name for custom API."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -p ./ -w",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "prepare": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.0"
  }
}
